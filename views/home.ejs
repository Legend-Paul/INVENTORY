<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/png" href="/logo/InvenTack.png" />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
        />
        <link rel="stylesheet" href="/styles.css" />
        <link rel="stylesheet" href="/home.css" />
        <link rel="stylesheet" href="/header.css" />
        <title>InvenTack</title>
    </head>
    <body>
        <%- include('partials/header') %>
        <div class="summary">
            <div class="inventory-fields categories">
                <i class="bi bi-layers"></i>
                <p><%= categoryCount %></p>
                <p class="summary-field-name">Category</p>
            </div>
            <div class="inventory-fields items">
                <i class="bi bi-list-ul"></i>
                <p><%= items %></p>
                <p class="summary-field-name">Items</p>
            </div>
            <div class="inventory-fields quatities">
                <i class="bi bi-basket-fill"></i>
                <p><%= quantities %></p>
                <p class="summary-field-name">Quantity</p>
            </div>
            <div class="inventory-fields costs">
                <i class="bi bi-cash-coin"></i>
                <p><%= price %></p>
                <p class="summary-field-name">Amount</p>
            </div>
        </div>
        <main>
            <div class="categories">
                <% categories.forEach(category => { %>
                <div class="card category-card">
                    <a href="/items?category=<%= category.id %>">
                        <div class="category-header">
                            <i class="bi bi-layers"></i>
                            <h2><%= category.name %></h2>
                        </div>
                        <div class="card-summary">
                            <p>
                                Total Items: <%= category.quantity ?
                                category.quantity : 0 %>
                            </p>
                            <p>
                                Total Amount: <%= category.price ?
                                category.price : 0 %>
                            </p>
                        </div>
                        <div class="category-description">
                            <p><%= category.description %></p>
                        </div>
                    </a>
                    <div class="c-t-a">
                        <a href="/items?category=<%= category.id %>"
                            ><i class="bi bi-box-arrow-up-right"></i
                        ></a>
                        <div class="item-actions">
                            <a
                                class="edit"
                                href="/update/category/<%=category.id%>"
                                ><i class="bi bi-pencil-square"></i
                            ></a>
                            <a
                                class="delete"
                                href="/delete/category/<%=category.id%>"
                                ><i class="bi bi-trash3"></i
                            ></a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>

            <article>
                <a class="add-button add-category-button" href="/new/category"
                    ><i class="bi bi-plus-lg"></i
                ></a>
            </article>
        </main>
    </body>
</html>
